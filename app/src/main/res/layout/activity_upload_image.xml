<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".UploadImage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:visibility="gone"
            android:id="@+id/getLocation"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="420dp"

            android:layout_marginEnd="156dp"
            android:backgroundTint="@color/black"
            android:text="Vị trí" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="260dp"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/border">
            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:text="Vị trí hiện tại:(Ấn vào đây để nhận \n vị trí hiện tại)............................... \n....................................................."
                android:textColor="@color/opacity"
                android:textSize="20dp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/uploadImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="160dp"
            android:background="@drawable/baseline_image_24"
            android:scaleType="fitCenter" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@color/lavender"
            android:visibility="invisible" />
        </LinearLayout>
        <EditText
            android:id="@+id/uploadCaption"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="40dp"
            android:layout_marginBottom="300dp"
            android:background="@drawable/border"
            android:hint="Nhập họ và tên - mã số sinh viên "
            android:textColorHint="@color/opacity"
            android:padding="16dp"
            android:paddingBottom="120dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/uploadButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="48dp"
            android:layout_marginBottom="25dp"
            android:backgroundTint="@color/lavender"
            android:src="@drawable/baseline_cloud_upload_24"
            app:tint="@color/white" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="320dp"
            android:layout_marginBottom="260dp"
            android:backgroundTint="@color/main"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textSize="20dp"
            android:layout_marginBottom="262dp"
            android:paddingLeft="100dp"
            android:textStyle="bold"
            android:text="Xác nhận thông tin" />
    </RelativeLayout>
</LinearLayout>